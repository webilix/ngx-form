{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "typescript.preferences.importModuleSpecifier": "non-relative",

    "files.exclude": {
        "**/.angular": true,
        "**/.git": true,
        "**/dist": true,
        "**/node_modules": true
    },

    "search.exclude": {
        "**/.angular": true,
        "**/.git": true,
        "**/dist": true,
        "**/node_modules": true
    },

    "files.watcherExclude": {
        "**/.angular": true,
        "**/.git": true,
        "**/dist": true,
        "**/node_modules": true
    }
}
